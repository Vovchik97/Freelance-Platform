@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Удаление персональных данных";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Удаление этих данных приведет к необратимому удалению вашей учетной записи, и восстановить ее будет невозможно.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="input-group mb-3">
                <label asp-for="Input.Password" class="form-label">Пароль</label>
                <input asp-for="Input.Password" class="form-input" autocomplete="current-password" aria-required="true" placeholder="Пожалуйста, введите свой пароль."/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Удалите данные и закройте мою учетную запись</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
