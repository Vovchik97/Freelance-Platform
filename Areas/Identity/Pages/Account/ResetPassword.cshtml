@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Сброс пароля";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="filters-card p-4">
        <h2 class="mb-2">Сброс пароля</h2>
        <p class="text-secondary mb-4">Введите адрес электронной почты и новый пароль, чтобы сбросить доступ к учётной записи.</p>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            <input asp-for="Input.Code" type="hidden"/>
            <div class="input-group mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-input" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="Input.Password" class="form-label">Пароль</label>
                <input asp-for="Input.Password" class="form-input" autocomplete="new-password" aria-required="true" placeholder="Введите новый пароль."/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">Подтверждение пароля</label>
                <input asp-for="Input.ConfirmPassword" class="form-input" autocomplete="new-password" aria-required="true" placeholder="Подтвердите новый пароль."/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Сбросить пароль</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
