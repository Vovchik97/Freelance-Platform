@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginModel

@{
ViewData["Title"] = "Вход в аккаунт";
}

<div class="container mt-5">
    <div class="header">
        <h1>@ViewData["Title"]</h1>
        <p class="text-secondary">Введите свои данные, чтобы войти в систему</p>
    </div>
    
    <div class="filters-card mx-auto" style="max-width: 600px;">
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="input-group">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-input" autocomplete="username" placeholder="Введите email"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="Input.Password" class="form-label">Пароль</label>
                <input asp-for="Input.Password" class="form-input" autocomplete="current-password" placeholder="Введите пароль"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">Запомнить меня</label>
            </div>

            <button id="login-submit" type="submit" class="btn btn-primary w-100">Войти</button>

            <div class="mt-3 d-flex flex-column gap-1 text-center">
                <a id="forgot-password" asp-page="./ForgotPassword">Забыли пароль?</a>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегистрироваться</a>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Отправить повторно письмо подтверждения</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
