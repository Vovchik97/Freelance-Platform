@page
@model FreelancePlatform.Areas.Identity.Pages.Admin.Users.IndexModel
@{
ViewData["Title"] = "Пользователи";
}
<h2>Пользователи</h2>
<table class="custom-table table-bordered table-striped">
    <thead>
    <tr>
        <th>Email</th>
        <th>Роль</th>
        <th>Статус</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
    <tr>
        <td>@user.Email</td>
        <td>@string.Join(", ", user.Roles)</td>
        <td>@(user.IsLockedOut ? "Заблокирован" : "Активен")</td>
        <td>
            <form method="post" asp-page-handler="ToggleAdmin" asp-route-id="@user.Id" class="d-inline">
                <button type="submit" class="btn btn-sm btn-warning">
                    @(user.IsAdmin ? "Снять админа" : "Выдать админа")
                </button>
            </form>
            <form method="post" asp-page-handler="Delete" asp-route-id="@user.Id" class="d-inline">
                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
            </form>
            <form method="get" asp-page="Details" asp-route-id="@user.Id" class="d-inline">
                <button type="submit" class="btn btn-sm btn-primary">Подробнее</button>
            </form>
            <form method="post" asp-page-handler="ToggleBan" asp-route-id="@user.Id" class="d-inline">
                @if (user.IsLockedOut)
                {
                    <button type="submit" class="btn btn-warning btn-sm">Разбанить</button>
                }
                else
                {
                    <button type="submit" class="btn btn-danger btn-sm">Забанить</button>
                }
            </form>
        </td>
    </tr>
    }
    </tbody>
</table>
