<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/themes.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/buttons.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/forms.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/cards.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/tables.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true"/>
    <style>
        body {
            display: flex;
            min-height: 100vh;
        }
    </style>
</head>
<body>
<div class="sidebar">
    <h4 class="mb-4">Панель администратора</h4>
    <nav class="nav flex-column">
        <a asp-page="/Admin/Index" class="nav-link">📊 Панель</a>
        <a asp-page="/Admin/Users/Index" class="nav-link">👤 Пользователи</a>
        <a asp-page="/Admin/Projects/Index" class="nav-link">📁 Проекты</a>
        <a asp-page="/Admin/Services/Index" class="nav-link">🛠️ Услуги</a>
        <a asp-page="/Admin/Bids/Index" class="nav-link">📨 Заявки</a>
        <a asp-page="/Admin/Orders/Index" class="nav-link">🧾 Заказы</a>
        <a asp-page="/Admin/Analytics/Index" class="nav-link">📈 Аналитика</a>
        <a asp-action="Index" asp-controller="Home" class="nav-link text-danger mt-4">🚪 Выйти</a>
    </nav>
</div>
<div class="content">
    @RenderBody()
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@RenderSection("Scripts", required: false)

</body>
</html>
