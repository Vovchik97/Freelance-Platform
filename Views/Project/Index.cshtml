@model IEnumerable<FreelancePlatform.Models.Project>
@{
    ViewData["Title"] = "Проекты";
}

<h2>Проекты</h2>

<form method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-3">
            <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Поиск по названию или описанию" />
        </div>
        <div class="col-md-2">
            <select name="status" class="form-select">
                <option value="">Все статусы</option>
                <option value="Open" selected="@(ViewBag.Status == "Open" ? "selected" : null)">Открыт</option>
                <option value="InProgress" selected="@(ViewBag.Status == "InProgress" ? "selected" : null)">В работе</option>
                <option value="Closed" selected="@(ViewBag.Status == "Closed" ? "selected" : null)">Закрыт</option>
            </select>
        </div>
        <div class="col-md-2">
            <input type="number" step="0.01" name="minBudget" value="@ViewBag.MinBudget" class="form-control" placeholder="Мин. бюджет" />
        </div>
        <div class="col-md-2">
            <input type="number" step="0.01" name="maxBudget" value="@ViewBag.MaxBudget" class="form-control" placeholder="Макс. бюджет" />
        </div>
        <div class="col-md-2">
            <select name="sort" class="form-select">
                <option value="" selected="@(string.IsNullOrEmpty(ViewBag.Sort))">По дате (по умолчанию)</option>
                <option value="budget_asc" selected="@(ViewBag.Sort == "budget_asc")">Бюджет ↑</option>
                <option value="budget_desc" selected="@(ViewBag.Sort == "budget_desc")">Бюджет ↓</option>
            </select>
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-primary w-100">Поиск</button>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Бюджет</th>
            <th>Статус</th>
            <th>Клиент</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Title</td>
                <td>@project.Description</td>
                <td>@project.Budget.ToString("C")</td>
                <td>@project.Status</td>
                <td>@project.Client?.Email</td>
            </tr>
        }
    </tbody>
</table>
