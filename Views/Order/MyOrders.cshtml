@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<FreelancePlatform.Models.Order>
@{
ViewData["Title"] = "Мои заказы";
}

<div class="container mt-5">
    <div class="header">
        <h1>Мои заказы</h1>
    </div>

    @if (Model.Any())
    {
    <div class="custom-table-container">
        <table class="custom-table">
            <thead>
            <tr>
                <th>Услуга</th>
                <th>Сумма</th>
                <th>Срок (дн.)</th>
                <th>Комментарий</th>
                <th>Дата</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var order in Model)
            {
            <tr>
                <td>@order.Service?.Title</td>
                <td>@order.Service?.Price ₽</td>
                <td>@order.DurationInDays</td>
                <td>@order.Comment</td>
                <td>@order.CreatedAt.ToLocalTime().ToString("g")</td>
                <td>
                    <span class="status-badge @GetStatusClass(order.Status.ToString())">
                        @GetStatusText(order.Status.ToString())
                    </span>
                </td>
                <td>
                    <div class="d-flex flex-column gap-1">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@order.Id">
                            <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            Детали
                        </a>
                        <a asp-controller="Service" asp-action="Details" asp-route-id="@order.Service?.Id" class="btn btn-sm btn-outline-secondary">
                            <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            Услуга
                        </a>

                        @if (order.Status == OrderStatus.Pending)
                        {
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@order.Id">
                                <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                                Редактировать
                            </a>
                        <form asp-action="Delete" asp-route-id="@order.Id" method="post" class="d-grid">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Удалить заказ?')">
                                <svg class="meta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6M9 4V3a1 1 0 011-1h4a1 1 0 011 1v1M4 7h16" />
                                </svg>
                                Удалить
                            </button>
                        </form>
                        }
                        else
                        {
                        <span class="text-muted">Нельзя изменить</span>
                        }
                    </div>
                </td>
            </tr>
            }
            </tbody>
        </table>
    </div>
    }
    else
    {
    <div class="alert alert-info">
        У вас пока нет заказов. <a asp-controller="Service" asp-action="Index">Посмотрите услуги</a>, чтобы заказать.
    </div>

    }
</div>

@functions {
    private string GetStatusClass(string status)
    {
        return status switch
        {
            "Pending" => "status-pending",
            "Accepted" => "status-accepted",
            "Rejected" => "status-rejected",
            "Completed" => "status-completed",
            "Paid" => "status-paid",
            _ => "status-pending"
        };
    }

    private string GetStatusText(string status)
    {
        return status switch
        {
            "Pending" => "Рассматривается",
            "Accepted" => "Одобрен",
            "Rejected" => "Отклонен",
            "Completed" => "Выполнен",
            "Paid" => "Оплачен",
            _ => "Неизвестно"
        };
    }
}