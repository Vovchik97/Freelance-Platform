@using System.Security.AccessControl
@model FreelancePlatform.Dto.Payment.PaymentCreateDto
@{
    ViewData["Title"] = "Оплата заказа";
}
<div class="filters-card mx-auto mt-4" style="max-width:600px;">
    <h2 class="filters-title mb-3">Оплата заказа #@Model.OrderId</h2>
    <p><strong>Услуга:</strong> @Model.ServiceTitle</p>
    <p><strong>Сумма:</strong> @Model.Amount.ToString("C", new System.Globalization.CultureInfo("ru-RU"))</p>

    <form asp-action="Start" asp-controller="Payment" method="post">
        <input type="hidden" name="orderId" value="@Model.OrderId" />
        <button type="submit" class="btn btn-primary">Перейти к оплате (Stripe Test)</button>
        <a asp-controller="Order" asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-outline-secondary ms-2">Назад</a>
    </form>
    <p class="text-muted mt-3">
        Используется Stripe в <strong>Test Mode</strong>. Карта: 4242 4242 4242 4242, любая дата и CVC.
    </p>
</div>